<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlacesApp.Mobile.MainPage"
             Padding="0,50,0,0">

    <StackLayout Margin="26,0" >
        <Frame 
            Padding="0" 
            CornerRadius="10"
            HeightRequest="250" >
            <Grid>
                <Image
                    Aspect="AspectFill" 
                    Source="https://picsum.photos/640/480/"/>
                <BoxView 
                    CornerRadius="10"
                    Margin="0,16,16,0"
                    BackgroundColor="Red"
                    VerticalOptions="Start"
                    HorizontalOptions="End"
                    HeightRequest="20" 
                    WidthRequest="20">
                </BoxView>
            </Grid>
        </Frame>
        <Grid 
              ColumnSpacing="20"
              HeightRequest="80">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="50" />
            </Grid.ColumnDefinitions>

            <StackLayout 
                VerticalOptions="Center"
                Grid.Column="0">
                <Label Text="Ocean at Algarve"/>
                <Label Text="Enjoy view over sky blue ocean from your room" LineBreakMode="TailTruncation"/>
            </StackLayout>
            <Frame 
                Grid.Column="1" 
                VerticalOptions="Center"
                Padding="0" 
                HeightRequest="50" 
                WidthRequest="10" >
                <StackLayout Spacing="0" VerticalOptions="Center" >
                    <Label HorizontalOptions="Center" Text="18" />
                    <Label HorizontalOptions="Center" Text="Aug" />
                </StackLayout>
            </Frame>
        </Grid>
    </StackLayout>

</ContentPage>
