<?xml version="1.0" encoding="UTF-8"?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PlacesApp.Mobile.Sections.Locations.LocationFilterView">
    <ContentView.Content>
        <StackLayout
            CascadeInputTransparent="True"
            InputTransparent="False">
            <StackLayout.GestureRecognizers>
                <TapGestureRecognizer
                    Tapped="TapGestureRecognizer_Tapped" />
            </StackLayout.GestureRecognizers>

            <Label
                x:Name="txtNome"
                FontSize="Small"
                Margin="5,0"
                Text="Todos" />

            <StackLayout
                x:Name="containerSelectedIndicator"
                BackgroundColor="Transparent"
                HeightRequest="2"
                VerticalOptions="End">

            </StackLayout>

        </StackLayout>
    </ContentView.Content>
</ContentView>